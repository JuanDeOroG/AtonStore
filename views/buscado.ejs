<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A T O N</title>
    <link rel="icon" type="image/x-icon" href="resources/img/logo.png">
    <!--CSS-->
    <link rel="stylesheet" href="resources/css/estilos-ropas.css">
    <link rel="stylesheet" href="resources/css/busqueda.css">
    <!--Font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Bebas+Neue&family=Poppins&display=swap"
        rel="stylesheet">
    <!--Iconos-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body>
    <section class="navbar-section">
        <div class="container-nav">
            <header class="header">
                <nav class="navbar">
                    <div class="name">
                        <a href="/">
                            <h1>aton</h1>
                        </a>
                    </div>
                    <div class="logo">
                        <img src="resources/img/logo-white.png" alt="logo">
                    </div>
                    <div class="list">
                        <ul class="ul-list">
                            <li class="item-navbar"><a href="#">Tienda</a></li>
                            <li class="item-navbar"><a href="#">Man</a></li>
                            <li class="item-navbar"><a href="#">New</a></li>
                            <li class="item-navbar"><a href="#">Contacto</a></li>
                        </ul>
                    </div>
                </nav>
            </header>
        </div>
    </section>

    <main class="input-buscar">
        <div class="container-busqueda">
            <div class="resultados">
                <form action="/buscado" method="POST" class="form-buscar" >
                    <input type="text" name="inputBuscar" id="inputBuscar" placeholder="Buscador">
                    <input type="submit" value="Buscar prenda">
                    <label for="">
                        <i class="bi bi-search"></i>
                    </label>
                </form>
            </div>
        </div>
    </main>

    <main class="target-main">
        <% for(let x of datos){%>
            
        <div class="container-target">
            <div class="img-target">
                <img src="resources/img/dbimages/<%=x.id_prendas+x.nombre %>.png" alt="<%= x.nombre %>">
                <div class="tittle-buscador">
                </div>
            </div>
            <div class="description-prenda">
                <h1><%= x.nombre %></h1>
                <p><%=x.descripcion %></p>
            </div>
        </div>
            <% } %>
        
    </main>
</body>

</html>