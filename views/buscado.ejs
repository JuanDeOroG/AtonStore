<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A T O N</title>
    <link rel="icon" type="image/x-icon" href="resources/img/logo.png">
    <!--CSS-->
    <link rel="stylesheet" href="resources/css/estilos-ropas.css">
    <link rel="stylesheet" href="resources/css/busqueda.css">
    <!--Font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Bebas+Neue&family=Poppins&display=swap"
        rel="stylesheet">
    <!--Iconos-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body>
    <section class="navbar-section">
        <div class="container-nav">
            <header class="header">
                <nav class="navbar">
                    <div class="name">
                        <a href="/">
                            <h1>aton</h1>
                        </a>
                    </div>
                    <div class="logo">
                        <img src="resources/img/logo-white.png" alt="logo">
                    </div>
                    <div class="list">
                        <ul class="ul-list">
                            <li class="item-navbar"><a href="#">Tienda</a></li>
                            <li class="item-navbar"><a href="#">Man</a></li>
                            <li class="item-navbar"><a href="#">New</a></li>
                            <li class="item-navbar"><a href="#">Contacto</a></li>
                        </ul>
                    </div>
                </nav>
            </header>
        </div>
    </section>

    <main class="input-buscar">
        <div class="container-buscar">
            <form action="/buscado" method="POST" class="buscador-contenedor">
                <input type="text" name="inputBuscar" id="inputBuscar" placeholder="Buscar" class="buscadorr">
                <div class="btn-buscar">
                    <input type="submit" value="btn">
                </div>
                <div class="container-1">
                    <div class="container-2">
                        <i class="bi bi-search"></i>
                    </div>
                </div>
            </form>
        </div>
    </main>
    

    <main class="target-main">
        <% for(let x of datos){%>
            
        <div class="container-target">
            <div class="img-target">
                <img src="resources/img/dbimages/<%=x.id_prendas+x.nombre %>.png" alt="<%= x.nombre %>">
                <div class="tittle-buscador">
                </div>
            </div>
            <div class="description-prenda">
                
                <form action="/addcart" method="POST">
                    <h1>
                        <%= x.nombre %>
                    </h1>
                    <input type="text" id="prenda"  name="prenda" value="<%= x.nombre %>" style="display: none;">
                    <p>
                        <%=x.descripcion %>
                    </p>
                <button type="submit" >AÃ±adir al carrito</button>
                </form>
            </div>
        </div>
            <% } %>
        

            <% if(carrito){%>
                <% for(x of carrito) {%> 
                    <form action="/quitar" method="POST">
                    <h1><%=x %> </h1>

                    <input type="text" id="qprenda" name="qprenda" value="<%=x %>" style="display: none;">

                    <button type="submit" >Quitar</button>
                    
                    </form>

                    <% } %> 

                <% }else{ %> <h2>No hay carrito</h2> <% } %> 
    </main>
</body>

</html>
