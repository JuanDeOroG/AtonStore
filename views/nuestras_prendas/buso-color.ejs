                    <div class="cantidad-prenda">
                        <div class="container-cantidad">
                            <div class="text-cantidad">
                                <label>Cantidad:</label>
                            </div>
                            <div class="input-cantidad">
                                <input type="text" required="required" class="cantidad">
                                <input type="button" class="btn" value="Añadir al carrito">
